<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Activity.ActSplace">


    <TextView
        android:id="@+id/tvAppName"
        style="@style/TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:text="@string/app_name"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/titleColor"
        android:layout_marginBottom="@dimen/_minus5sdp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/mostley"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clipToPadding="true"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardBackgroundColor="@color/cardColor"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_245sdp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/write" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCaption"
        style="@style/TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:elevation="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:text="@string/caption_handwrite"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
         />


</androidx.constraintlayout.widget.ConstraintLayout>